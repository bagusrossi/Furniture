<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.furniture">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/SplashTheme">
        <activity android:name=".Activities.RegisterActivity"></activity>
        <activity android:name=".Activities.FrontActivity" />
        <activity
            android:name=".Activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.ManageActivity" />
        <activity android:name=".Activities.ManageUserActivity" />
        <activity android:name=".Activities.ManageUserListActivity" />
        <activity android:name=".Activities.ManageCreateUserActivity" />
        <activity android:name=".Activities.ProfileActivity" />
        <activity android:name=".Activities.ManageCategoryActivity" />
        <activity android:name=".Activities.ManageCategoryCRUDActivity" />
        <activity android:name=".Activities.ManageProductActivity" />
        <activity android:name=".Activities.ManageProductListActivity" />
        <activity android:name=".Activities.ManageProductCRUDActivity" />
        <activity android:name=".Activities.ProductDetailActivity" />
        <activity android:name=".Activities.EmployeeActivity" />
        <activity android:name=".Activities.EmployeeProductCRUDActivity" />
        <activity android:name=".Activities.CategoriesActivity" />
        <activity android:name=".Activities.CartActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".Activities.OrderActivity" />
        <activity android:name=".Activities.OrderConfirmationActivity" />
        <activity android:name=".Activities.HistoryActivity" />
        <activity android:name=".Activities.OrdersDetailActivity" />
        <activity android:name=".Activities.PaymentActivity" />
        <activity android:name=".Activities.SubmitPaymentActivity" />
        <activity android:name=".Activities.ManagePaymentActivity" />
        <activity android:name=".Activities.ManagePaymentDetailActivity" />
        <activity android:name=".Activities.EmployeeShipmentActivity" />
        <activity android:name=".Activities.EmployeeShipmentDetailActivity" />
        <activity android:name=".Activities.ResultActivity" />
        <activity android:name=".Activities.ManageReportActivity" />
        <activity android:name=".Activities.ManageReportListActivity" />
        <activity android:name=".Activities.ComplaintsListActivity" />
        <activity android:name=".Activities.ComplaintsAddActivity" />
        <activity android:name=".Activities.ComplaintsDetailActivity" />
    </application>

</manifest>