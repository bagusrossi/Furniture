<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/amber_gradient"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="35sp"
        android:padding="15dp"
        android:textAlignment="textEnd"
        android:textColor="@color/colorWhite"
        android:text="PEMESANAN"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:text="Bank Central Asia (BCA)\n1084 4111 86\nRisky Saputra"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:text="Pemesanan berhasil, silahkan transfer ke rekening diatas dan lakukan konfirmasi pembayaran pada melalui menu profile. Anda juga dapat melihat daftar pesanan anda pada menu profile."/>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnBack"
            android:layout_width="255dp"
            android:layout_height="38dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorShade">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="Kembali"
                android:textSize="14sp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>